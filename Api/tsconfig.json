{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "listFiles": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}